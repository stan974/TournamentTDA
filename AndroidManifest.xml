<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projetTDA.tournamentbuilder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tournament_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
       <activity
            android:name="com.projetTDA.tournamentbuilder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.projetTDA.tournamentbuilder.CreerJoueur"
            android:label="@string/title_creer_joueur" >
        </activity>
        <activity
            android:name="com.projetTDA.tournamentbuilder.GererJoueur"
            android:label="@string/gerer_joueur" >
        </activity>
        <activity
            android:name="com.projetTDA.tournamentbuilder.GererTournoi"
            android:label="@string/gerer_tournoi" >
        </activity>
        <activity
            android:name="com.projetTDA.tournamentbuilder.Statistique"
            android:label="@string/statistique" >
        </activity>
    </application>

</manifest>
